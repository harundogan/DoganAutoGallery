@model IEnumerable<_006_DoganAutoGallery.Models.Gallery>

@{
    ViewBag.Title = "ListCars";
}

<h2>List Cars</h2>

<p>
    @Html.ActionLink("Add New Car", "AddNewCar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BrandName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModelName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LicensePlate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentStatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.BrandName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ModelName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CarYear)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LicensePlate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CurrentStatus)
    </td>
    <td>
        @Html.ActionLink("Edit", "EditCar", new { id = item.CarID }) |
        @Html.ActionLink("Details", "CarDetails", new { id = item.CarID }) |
        @Html.ActionLink("Delete", "DeleteCar", new { id = item.CarID })
    </td>
</tr>
}

</table>
